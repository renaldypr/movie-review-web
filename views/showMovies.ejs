<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>
<body>
        <a href="/movies/add">addMovies</a>
        <div class="container">
                  <table>
                    <tr>  
                      <th>Movie</th>
                      <th>Genre</th>
                      <th>Action</th>
                    </tr>
                    <% movie.forEach(movie => { %>
                      <tr>
                        <td><%= movie.title %></td>
                        <td><%= movie.genre %></td>
                        <td><a href="/movie/<%= movie.id %>/edit">Edit</a> || 
                            <a href="/movie/<%= movie.id %>/delete">Delete</a>
                        </td>
                      </tr>
                    <% }) %>
                  </table>
        </div>
        <br>
        <a href="/">back</a>
   </body>
</html>