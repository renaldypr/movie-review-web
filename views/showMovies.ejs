<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>
<body>
        <a href="/movies/add">addMovies</a>
        <div class="container">
                  <table>
                    <tr>  
                      <th>Movie</th>
                      <th>Genre</th>
                      <th>Average Rating</th>
                      <th>Options</th>
                    </tr>
                    <% movie.forEach(movie => { %>
                      <tr>
                        <td><%= movie.title %></td>
                        <td><%= movie.genre %></td>
                        <% let arr = []; %>
                        <% for (let i = 0; i < reviews.length; i++) { %>
                          <% if (reviews[i].movieId === movie.id) { %>
                            <% arr.push(reviews[i].score) %>
                          <% } %>
                        <% } %>
                        <td><%= avg(arr) %></td>
                        <td><a href="/movies/<%= movie.id %>/edit">Edit</a> || 
                            <a href="/movies/<%= movie.id %>/delete">Delete</a> || 
                            <a href="/movies/<%= movie.id %>">See Review</a>
                        </td>
                      </tr>
                    <% }) %>
                  </table>
        </div>
        <br>
        <a href="/">back</a>
   </body>
</html>